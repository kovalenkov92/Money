(function () {

  "use strict";

  angular.module('main').controller('IndexCtrl', [ '$scope', '$state', 'CategoriesFactory', 'BalancesFactory', 'TransactionsFactory', '$modal', 'IncomesFactory',
    function($scope, $state, categories, balances, transactions, $uibModal, incomes) {

      var getBalance = function() {
        balances.getBalance()
          .success(function(data) {
            $scope.balance = data.balance;
          })
      };
      getBalance();

      var getIncomes = function() {
        incomes.index()
          .success(function(data) {
            $scope.incomes = data.incomes;
          })
          .error(function(data) {
            console.log(data);
          })
      };
      getIncomes();

      var getCategories = function() {
        categories.all()
          .success(function(data) {
            $scope.categories = data.categories;
          })
      };
      getCategories();

      $scope.addCategory = function() {
          var modalInstance = $uibModal.open({
            animation: true,
            templateUrl: "<%= asset_path('application/templates/modals/new-category-modal.html') %>",
            controller: ['$scope', '$http', '$modalInstance', function($scope, $http, $modalInstance) {

                $scope.ok = function (name) {
                categories.createCategory(name)
                  .success(function(data) {
                    $modalInstance.close();
                    getCategories();
                  })
                  .error(function(data) {
                    $scope.errors = data.errors;
                  })
                };

                $scope.cancel = function () {
                $modalInstance.dismiss('cancel');
                };
            }],
          });         
      };

      var getTransactions = function() {
        transactions.all()
          .success(function(data) {
            $scope.transactions = data.transactions;
          })
          .error(function(data) {
            console.log(data);
          })
      };
      getTransactions();

      $scope.fixOutgo = function(value, category, comment) {
        $scope.transaction_errors = false;
        
        if (!category) {
          category = null;
        }else{
          category = category.id;
        }

        transactions.createTransaction(value, category, comment)
          .success(function(data) {
            getBalance();
            getCategories();
            getTransactions();
          })
          .error(function(data) {
            console.log(data);
            $scope.transaction_errors = data.errors;
          });
      };

      $scope.fixIncome = function() {
        var modalInstance = $uibModal.open({
            animation: true,
            templateUrl: "<%= asset_path('application/templates/modals/confirm-income-dialog.html') %>",
            controller: ['$scope', '$http', '$modalInstance', function($scope, $http, $modalInstance) {

                $scope.ok = function (value, comment) {
                  incomes.update(value, comment)
                    .success(function(data) {
                      $modalInstance.close();
                      getBalance();
                      getIncomes();
                    })
                    .error(function(data) {
                      $scope.income_errors = data.errors;
                    });
                };

                $scope.cancel = function () {
                $modalInstance.dismiss('cancel');
                };
            }],
        });
        
      };

      $scope.removeTransaction = function(id) {
        var modalInstance = $uibModal.open({
            animation: true,
            templateUrl: "<%= asset_path('application/templates/modals/confirm-dialog.html') %>",
            controller: ['$scope', '$http', '$modalInstance', function($scope, $http, $modalInstance) {

                $scope.ok = function () {
                  transactions.deleteTransaction(id)
                    .success(function(data) {
                      $modalInstance.close();
                      getTransactions();
                      getCategories();
                      getBalance();
                    })
                    .error(function(data) {
                      console.log(data);
                    })
                };

                $scope.cancel = function () {
                  $modalInstance.dismiss('cancel');
                };
            }],
        });
      };

      $scope.removeIncome = function(id) {
        var modalInstance = $uibModal.open({
            animation: true,
            templateUrl: "<%= asset_path('application/templates/modals/confirm-dialog.html') %>",
            controller: ['$scope', '$http', '$modalInstance', function($scope, $http, $modalInstance) {

                $scope.ok = function () {
                  incomes.deleteIncome(id)
                    .success(function(data) {
                      $modalInstance.close();
                      getBalance();
                      getIncomes();
                    })
                    .error(function(data) {
                      console.log(data);
                    });
                };

                $scope.cancel = function () {
                  $modalInstance.dismiss('cancel');
                };
            }],
        });
      };

    }])
}());